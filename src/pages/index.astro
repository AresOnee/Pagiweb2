---
import MainLayout from '../layouts/MainLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import CategoryCard from '../components/CategoryCard.astro';
import ProductCard from '../components/ProductCard.astro';
import { getCollection } from 'astro:content';
import categories from '../data/categories.json';

const allProducts = await getCollection('products');

// Featured: products with badge first, then fill to 6
const withBadge = allProducts.filter(p => p.data.badge !== null);
const featured = withBadge.length >= 6
  ? withBadge.slice(0, 6)
  : [...withBadge, ...allProducts.filter(p => !p.data.badge).slice(0, 6 - withBadge.length)];
---

<MainLayout title="Gel Chile — Sistemas de Puesta a Tierra y Protección Eléctrica">
  <HeroSection />

  <!-- Categorías -->
  <section class="section categories-section">
    <div class="container">
      <h2 class="section-title">Categorías de Productos</h2>
      <p class="section-subtitle">
        Soluciones integrales para sistemas de puesta a tierra y protección eléctrica
      </p>
      <div class="categories-grid">
        {categories.map((cat) => (
          <CategoryCard id={cat.id} name={cat.name} description={cat.description} count={cat.count} />
        ))}
      </div>
    </div>
  </section>

  <!-- Productos Destacados -->
  <section class="section featured-section">
    <div class="container">
      <h2 class="section-title">Productos Destacados</h2>
      <p class="section-subtitle">
        Los productos más solicitados por nuestros clientes
      </p>
      <div class="featured-grid">
        {featured.map((p) => (
          <ProductCard
            sku={p.data.sku}
            title={p.data.title}
            category={p.data.category}
            categorySlug={p.data.categorySlug}
            description={p.data.description}
            image={p.data.image}
            badge={p.data.badge}
            inStock={p.data.inStock}
          />
        ))}
      </div>
      <div class="featured-cta">
        <a href="/productos" class="btn btn-primary btn-lg">Ver Todos los Productos</a>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">¿Necesitas una Cotización?</h2>
        <p class="cta-description">
          Agrega los productos que necesitas y solicita tu cotización personalizada.
          Respondemos en menos de 24 horas hábiles.
        </p>
        <div class="cta-buttons">
          <a href="/productos" class="btn btn-white btn-lg">Explorar Productos</a>
          <a href="/cotizacion" class="btn btn-accent btn-lg">Ver Mi Cotización</a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Categories Section */
  .categories-section {
    background: var(--color-gray-50);
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--spacing-6);
    margin-top: var(--spacing-10);
  }

  /* Featured Section */
  .featured-section {
    background: var(--color-white);
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--spacing-6);
    margin-top: var(--spacing-10);
  }

  .featured-cta {
    text-align: center;
    margin-top: var(--spacing-10);
  }

  /* CTA Section */
  .cta-section {
    position: relative;
    background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
    padding: var(--spacing-20) 0;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 20% 50%, rgba(255,255,255,0.08) 0%, transparent 50%),
                radial-gradient(circle at 80% 50%, rgba(255,255,255,0.05) 0%, transparent 50%);
    pointer-events: none;
  }

  .cta-content {
    position: relative;
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-extrabold);
    color: var(--color-white);
    margin-bottom: var(--spacing-4);
  }

  .cta-description {
    font-size: var(--font-size-lg);
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: var(--spacing-8);
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: var(--spacing-4);
    flex-wrap: wrap;
  }

  /* Dark Mode */
  :global([data-theme="dark"]) .categories-section {
    background: var(--color-gray-900);
  }

  :global([data-theme="dark"]) .featured-section {
    background: var(--color-gray-800);
  }

  :global([data-theme="dark"]) .cta-section {
    background: linear-gradient(135deg, #0a1628 0%, var(--color-primary-dark) 100%);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .categories-grid,
    .featured-grid {
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: var(--spacing-4);
    }

    .cta-title {
      font-size: var(--font-size-2xl);
    }

    .cta-section {
      padding: var(--spacing-12) 0;
    }
  }

  @media (max-width: 480px) {
    .categories-grid,
    .featured-grid {
      grid-template-columns: 1fr;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
