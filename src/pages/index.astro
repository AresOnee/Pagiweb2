---
import MainLayout from '../layouts/MainLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import CategoryCard from '../components/CategoryCard.astro';
import ProductCard from '../components/ProductCard.astro';
import { getCollection } from 'astro:content';
import categories from '../data/categories.json';

const allProducts = (await getCollection('products')).filter(p => p.data.categorySlug !== 'servicios');

// Featured: products with badge first, then fill to 6
const withBadge = allProducts.filter(p => p.data.badge !== null);
const featured = withBadge.length >= 6
  ? withBadge.slice(0, 6)
  : [...withBadge, ...allProducts.filter(p => !p.data.badge).slice(0, 6 - withBadge.length)];
---

<MainLayout title="GelChile — Sistemas de Puesta a Tierra y Protección Eléctrica" preloadImage="/assets/img/gelchile-hero-logo.webp">
  <HeroSection />

  <!-- Trust Strip -->
  <section class="trust-strip">
    <div class="container">
      <div class="trust-grid">
        <div class="trust-item" data-aos="fade-up" data-aos-delay="0">
          <div class="trust-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
          </div>
          <div class="trust-text">
            <strong>20+</strong>
            <span>Años de Experiencia</span>
          </div>
        </div>
        <div class="trust-item" data-aos="fade-up" data-aos-delay="100">
          <div class="trust-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <rect x="3" y="3" width="7" height="7"/>
              <rect x="14" y="3" width="7" height="7"/>
              <rect x="14" y="14" width="7" height="7"/>
              <rect x="3" y="14" width="7" height="7"/>
            </svg>
          </div>
          <div class="trust-text">
            <strong>56</strong>
            <span>Productos en Catálogo</span>
          </div>
        </div>
        <div class="trust-item" data-aos="fade-up" data-aos-delay="200">
          <div class="trust-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <rect x="1" y="3" width="15" height="13" rx="2"/>
              <path d="M16 8h4l3 3v5a2 2 0 0 1-2 2h-1"/>
              <circle cx="5.5" cy="18.5" r="2.5"/>
              <circle cx="18.5" cy="18.5" r="2.5"/>
            </svg>
          </div>
          <div class="trust-text">
            <strong>Todo Chile</strong>
            <span>Despacho Nacional</span>
          </div>
        </div>
        <div class="trust-item" data-aos="fade-up" data-aos-delay="300">
          <div class="trust-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <polyline points="9 11 12 14 22 4"/>
              <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
            </svg>
          </div>
          <div class="trust-text">
            <strong>ISO 9001</strong>
            <span>Certificación Garantizada</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Categorías -->
  <section class="section categories-section">
    <div class="container">
      <h2 class="section-title" data-aos="fade-up">Categorías de Productos</h2>
      <p class="section-subtitle" data-aos="fade-up" data-aos-delay="100">
        Soluciones integrales para sistemas de puesta a tierra y protección eléctrica
      </p>
      <div class="categories-grid">
        {categories.map((cat, i) => (
          <CategoryCard id={cat.id} name={cat.name} description={cat.description} count={cat.count} delay={(i % 4) * 100} />
        ))}
      </div>
    </div>
  </section>

  <!-- Section Divider -->
  <div class="section-divider">
    <svg viewBox="0 0 1200 60" preserveAspectRatio="none" aria-hidden="true">
      <path d="M0,60 C300,0 900,0 1200,60 L1200,60 L0,60 Z" fill="var(--color-white)"/>
    </svg>
  </div>

  <!-- Productos Destacados -->
  <section class="section featured-section">
    <div class="container">
      <h2 class="section-title" data-aos="fade-up">Productos Destacados</h2>
      <p class="section-subtitle" data-aos="fade-up" data-aos-delay="100">
        Los productos más solicitados por nuestros clientes
      </p>
      <div class="featured-grid">
        {featured.map((p, i) => (
          <ProductCard
            sku={p.data.sku}
            title={p.data.title}
            category={p.data.category}
            categorySlug={p.data.categorySlug}
            description={p.data.description}
            image={p.data.image}
            badge={p.data.badge}
            inStock={p.data.inStock}
            delay={(i % 3) * 100}
          />
        ))}
      </div>
      <div class="featured-cta">
        <a href="/productos" class="btn btn-primary btn-lg">Ver Todos los Productos</a>
      </div>
    </div>
  </section>

  <!-- Section Divider -->
  <div class="section-divider section-divider-reverse">
    <svg viewBox="0 0 1200 60" preserveAspectRatio="none" aria-hidden="true">
      <path d="M0,0 C300,60 900,60 1200,0 L1200,0 L0,0 Z" fill="var(--color-white)"/>
    </svg>
  </div>

  <!-- Por Qué Elegirnos -->
  <section class="section features-section">
    <div class="container">
      <h2 class="section-title" data-aos="fade-up">Por Qué Elegirnos</h2>
      <p class="section-subtitle" data-aos="fade-up" data-aos-delay="100">
        Especialistas en sistemas de puesta a tierra y protección eléctrica
      </p>
      <div class="feature-grid">
        <div class="feature-card" data-aos="fade-up" data-aos-delay="100">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              <path d="M9 12l2 2 4-4"/>
            </svg>
          </div>
          <h3 class="feature-title">Calidad Garantizada</h3>
          <p class="feature-description">Todos nuestros productos cuentan con certificación y garantía extendida.</p>
        </div>
        <div class="feature-card" data-aos="fade-up" data-aos-delay="200">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <rect x="1" y="3" width="15" height="13" rx="2"/>
              <path d="M16 8h4l3 3v5a2 2 0 0 1-2 2h-1"/>
              <circle cx="5.5" cy="18.5" r="2.5"/>
              <circle cx="18.5" cy="18.5" r="2.5"/>
            </svg>
          </div>
          <h3 class="feature-title">Despacho Nacional</h3>
          <p class="feature-description">Enviamos a todo el país con seguimiento en tiempo real de tu pedido.</p>
        </div>
        <div class="feature-card" data-aos="fade-up" data-aos-delay="300">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
          </div>
          <h3 class="feature-title">Soporte Técnico</h3>
          <p class="feature-description">Equipo de ingenieros disponibles para asesorarte en tu compra.</p>
        </div>
        <div class="feature-card" data-aos="fade-up" data-aos-delay="400">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <line x1="12" y1="1" x2="12" y2="23"/>
              <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
            </svg>
          </div>
          <h3 class="feature-title">Mejores Precios</h3>
          <p class="feature-description">Cotizaciones competitivas para empresas y profesionales.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content" data-aos="zoom-in">
        <h2 class="cta-title">¿Necesitas una Cotización?</h2>
        <p class="cta-description">
          Agrega los productos que necesitas y solicita tu cotización personalizada.
          Respondemos en menos de 24 horas hábiles.
        </p>
        <div class="cta-buttons">
          <a href="/productos" class="btn btn-white btn-lg">Explorar Productos</a>
          <a href="/cotizacion" class="btn btn-accent btn-lg">Ver Mi Cotización</a>
        </div>
        <p class="cta-founder">
          GelChile, fundada por <strong>Claudio Mitchel Ramirez Sepulveda</strong> — más de <strong>20 años de experiencia</strong> respaldando cada solución.
        </p>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Trust Strip */
  .trust-strip {
    background: var(--color-white);
    padding: var(--spacing-8) 0;
    border-bottom: 1px solid var(--color-gray-100);
  }

  .trust-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-6);
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    justify-content: center;
  }

  .trust-icon {
    width: 44px;
    height: 44px;
    background: var(--color-primary-50);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .trust-icon svg {
    width: 22px;
    height: 22px;
    color: var(--color-primary);
  }

  .trust-text {
    display: flex;
    flex-direction: column;
  }

  .trust-text strong {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--color-gray-900);
    line-height: 1.2;
  }

  .trust-text span {
    font-size: var(--font-size-xs);
    color: var(--color-gray-500);
  }

  /* Section Dividers */
  .section-divider {
    position: relative;
    height: 60px;
    background: var(--color-gray-50);
    margin-top: -1px;
  }

  .section-divider svg {
    display: block;
    width: 100%;
    height: 100%;
  }

  .section-divider-reverse {
    background: var(--color-white);
  }

  .section-divider-reverse svg path {
    fill: var(--color-gray-50);
  }

  /* Categories Section */
  .categories-section {
    background: var(--color-gray-50);
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--spacing-6);
    margin-top: var(--spacing-10);
  }

  /* Featured Section */
  .featured-section {
    background: var(--color-white);
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--spacing-6);
    margin-top: var(--spacing-10);
  }

  .featured-cta {
    text-align: center;
    margin-top: var(--spacing-10);
  }

  /* Features Section */
  .features-section {
    background: var(--color-gray-50);
    position: relative;
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-6);
    margin-top: var(--spacing-10);
  }

  .feature-card {
    padding: var(--spacing-8);
    background: var(--color-gray-50);
    border-radius: var(--radius-xl);
    text-align: center;
    transition: background var(--transition-base), box-shadow var(--transition-base);
  }

  .feature-card:hover {
    background: var(--color-white);
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .feature-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto var(--spacing-4);
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-white);
    transition: transform var(--transition-base), background var(--transition-base);
  }

  .feature-card:hover .feature-icon {
    transform: scale(1.1) rotate(-5deg);
    box-shadow: 0 8px 20px rgba(0, 82, 204, 0.3);
  }

  .feature-icon svg {
    width: 32px;
    height: 32px;
  }

  .feature-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-gray-900);
    margin-bottom: var(--spacing-2);
  }

  .feature-description {
    font-size: var(--font-size-sm);
    color: var(--color-gray-500);
    line-height: 1.6;
  }

  /* CTA Section */
  .cta-section {
    position: relative;
    background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
    padding: var(--spacing-20) 0;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 20% 50%, rgba(255,255,255,0.08) 0%, transparent 50%),
                radial-gradient(circle at 80% 50%, rgba(255,255,255,0.05) 0%, transparent 50%);
    pointer-events: none;
  }

  .cta-content {
    position: relative;
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-extrabold);
    color: var(--color-white);
    margin-bottom: var(--spacing-4);
  }

  .cta-description {
    font-size: var(--font-size-lg);
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: var(--spacing-8);
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: var(--spacing-4);
    flex-wrap: wrap;
  }

  .cta-founder {
    margin-top: var(--spacing-6);
    font-size: var(--font-size-sm);
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
  }

  .cta-founder strong {
    color: var(--color-white);
    font-weight: var(--font-weight-semibold);
  }

  /* Dark Mode — hardcoded hex values (variable inversion maps gray-800 to near-white) */
  :global([data-theme="dark"]) .trust-strip {
    background: #0f172a;
    border-bottom-color: #1e293b;
  }

  :global([data-theme="dark"]) .trust-icon {
    background: rgba(76, 154, 255, 0.15);
  }

  :global([data-theme="dark"]) .trust-icon svg {
    color: #60a5fa;
  }

  :global([data-theme="dark"]) .trust-text strong {
    color: #e2e8f0;
  }

  :global([data-theme="dark"]) .trust-text span {
    color: #b0bec5;
  }

  :global([data-theme="dark"]) .section-divider {
    background: #0f172a;
  }

  :global([data-theme="dark"]) .section-divider svg path {
    fill: #0f172a;
  }

  :global([data-theme="dark"]) .section-divider-reverse {
    background: #0f172a;
  }

  :global([data-theme="dark"]) .section-divider-reverse svg path {
    fill: #0f172a;
  }

  :global([data-theme="dark"]) .categories-section {
    background: #0f172a;
  }

  :global([data-theme="dark"]) .featured-section {
    background: #0f172a;
  }

  :global([data-theme="dark"]) .features-section {
    background: #0f172a;
  }

  :global([data-theme="dark"]) .feature-card {
    background: #1e293b;
  }

  :global([data-theme="dark"]) .feature-card:hover {
    background: #334155;
  }

  :global([data-theme="dark"]) .feature-title {
    color: #e2e8f0;
  }

  :global([data-theme="dark"]) .feature-description {
    color: #b0bec5;
  }

  :global([data-theme="dark"]) .cta-section {
    background: linear-gradient(135deg, #0a1628 0%, #003D99 100%);
  }

  :global([data-theme="dark"]) .feature-icon {
    background: linear-gradient(135deg, rgba(96, 165, 250, 0.15) 0%, rgba(59, 130, 246, 0.25) 100%);
    color: #60a5fa;
  }

  :global([data-theme="dark"]) .feature-card:hover .feature-icon {
    background: linear-gradient(135deg, rgba(96, 165, 250, 0.3) 0%, rgba(59, 130, 246, 0.4) 100%);
    box-shadow: 0 8px 20px rgba(59, 130, 246, 0.2);
  }

  :global([data-theme="dark"]) .cta-title {
    color: #ffffff;
  }

  :global([data-theme="dark"]) .cta-founder strong {
    color: #ffffff;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .feature-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .trust-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .categories-grid,
    .featured-grid {
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: var(--spacing-4);
    }

    .cta-title {
      font-size: var(--font-size-2xl);
    }

    .cta-section {
      padding: var(--spacing-12) 0;
    }
  }

  @media (max-width: 480px) {
    .trust-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-4);
    }

    .trust-item {
      justify-content: flex-start;
      padding-left: var(--spacing-4);
    }

    .categories-grid,
    .featured-grid,
    .feature-grid {
      grid-template-columns: 1fr;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
