---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Página no encontrada | GelChile" description="La página que buscas no existe o ha sido movida.">
  <section class="error-page">
    <div class="container">
      <div class="error-card">
        <div class="error-code">404</div>

        <div class="error-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8" />
            <line x1="21" y1="21" x2="16.65" y2="16.65" />
            <line x1="8" y1="8" x2="14" y2="14" />
            <line x1="14" y1="8" x2="8" y2="14" />
          </svg>
        </div>

        <h1>Página no encontrada</h1>

        <p class="error-message">
          La página que buscas no existe, fue movida o no está disponible.
          Verifica la URL o navega a una de nuestras secciones.
        </p>

        <div class="actions">
          <a href="/" class="btn btn-primary">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
              <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
              <polyline points="9 22 9 12 15 12 15 22"/>
            </svg>
            Volver al Inicio
          </a>
          <a href="/productos" class="btn btn-outline">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
              <polygon points="12 2 2 7 12 12 22 7 12 2"/>
              <polyline points="2 17 12 22 22 17"/>
              <polyline points="2 12 12 17 22 12"/>
            </svg>
            Ver Productos
          </a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .error-page {
    padding: calc(72px + var(--spacing-12)) 0 var(--spacing-16);
    min-height: 80vh;
    display: flex;
    align-items: center;
  }

  .error-card {
    max-width: 540px;
    margin: 0 auto;
    text-align: center;
    background: var(--color-white);
    border-radius: var(--radius-xl);
    padding: var(--spacing-12);
    box-shadow: var(--shadow-lg);
  }

  .error-code {
    font-size: 6rem;
    font-weight: var(--font-weight-extrabold);
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: var(--spacing-4);
  }

  .error-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto var(--spacing-6);
    background: linear-gradient(135deg, var(--color-gray-400) 0%, var(--color-gray-500) 100%);
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .error-icon svg {
    width: 32px;
    height: 32px;
    color: white;
  }

  h1 {
    font-size: var(--font-size-3xl);
    color: var(--color-gray-900);
    margin-bottom: var(--spacing-4);
  }

  .error-message {
    font-size: var(--font-size-lg);
    color: var(--color-gray-600);
    margin-bottom: var(--spacing-8);
    line-height: 1.6;
  }

  .actions {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
  }

  .actions .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-2);
  }

  /* Dark mode */
  :global([data-theme="dark"]) .error-card {
    background: #1e293b;
  }

  :global([data-theme="dark"]) h1 {
    color: #f1f5f9;
  }

  :global([data-theme="dark"]) .error-message {
    color: #b0bec5;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .error-card {
      padding: var(--spacing-8) var(--spacing-4);
    }

    .error-code {
      font-size: 4rem;
    }

    h1 {
      font-size: var(--font-size-2xl);
    }

    .error-message {
      font-size: var(--font-size-base);
    }
  }
</style>
