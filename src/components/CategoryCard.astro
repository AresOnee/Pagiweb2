---
interface Props {
  id: string;
  name: string;
  description: string;
  count: number;
}

const { id, name, description, count } = Astro.props;
---

<a href={`/productos?categoria=${id}`} class="category-card">
  <div class="category-icon">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
    </svg>
  </div>
  <h3 class="category-title">{name}</h3>
  <p class="category-description">{description}</p>
  <span class="category-count">{count} {count === 1 ? 'producto' : 'productos'}</span>
</a>

<style>
  .category-card {
    position: relative;
    display: block;
    padding: var(--spacing-8);
    background: var(--color-white);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-xl);
    text-align: center;
    transition: all var(--transition-base);
    overflow: hidden;
  }

  .category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--color-primary) 0%, var(--color-accent) 100%);
    transform: scaleX(0);
    transition: transform var(--transition-base);
  }

  .category-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-card-hover);
    border-color: transparent;
  }

  .category-card:hover::before {
    transform: scaleX(1);
  }

  .category-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto var(--spacing-4);
    background: linear-gradient(135deg, var(--color-primary-50) 0%, var(--color-primary-light) 100%);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition-base);
  }

  .category-card:hover .category-icon {
    transform: scale(1.1) rotate(5deg);
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
  }

  .category-icon svg {
    width: 40px;
    height: 40px;
    color: var(--color-primary);
    transition: color var(--transition-base);
  }

  .category-card:hover .category-icon svg {
    color: var(--color-white);
  }

  .category-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-gray-900);
    margin-bottom: var(--spacing-2);
  }

  .category-description {
    font-size: var(--font-size-sm);
    color: var(--color-gray-500);
    margin-bottom: var(--spacing-2);
    line-height: 1.5;
  }

  .category-count {
    font-size: var(--font-size-sm);
    color: var(--color-gray-500);
    font-weight: var(--font-weight-medium);
  }

  /* Dark mode â€” hardcoded hex values for reliability */
  :global([data-theme="dark"]) .category-card {
    background: #1e293b;
    border-color: #334155;
  }

  :global([data-theme="dark"]) .category-title {
    color: #ffffff;
  }

  :global([data-theme="dark"]) .category-description,
  :global([data-theme="dark"]) .category-count {
    color: #94a3b8;
  }

  :global([data-theme="dark"]) .category-icon {
    background: linear-gradient(135deg, rgba(76, 154, 255, 0.15) 0%, rgba(76, 154, 255, 0.3) 100%);
  }

  :global([data-theme="dark"]) .category-icon svg {
    color: #60a5fa;
  }

  :global([data-theme="dark"]) .category-card:hover .category-icon svg {
    color: #ffffff;
  }
</style>
