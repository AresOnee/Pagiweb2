---
interface Props {
  id: string;
  name: string;
  description: string;
  count: number;
  delay?: number;
}

const { id, name, description, count, delay } = Astro.props;

const CATEGORY_ICONS: Record<string, string> = {
  'electrodos-electromagneticos': '<path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>',
  'electrodos-grafito': '<ellipse cx="12" cy="5" rx="5" ry="3"/><path d="M7 5v14c0 1.66 2.24 3 5 3s5-1.34 5-3V5"/>',
  'barras-quimicas': '<path d="M10 2v7.527a2 2 0 0 1-.211.896L4.72 20.55a1 1 0 0 0 .9 1.45h12.76a1 1 0 0 0 .9-1.45l-5.069-10.127A2 2 0 0 1 14 9.527V2"/><path d="M8.5 2h7"/><path d="M7 16.5h10"/>',
  'aditivos': '<path d="M12 22a7 7 0 0 0 7-7c0-2-1-3.9-3-5.5s-3.5-4-4-6.5c-.5 2.5-2 4.9-4 6.5C6 11.1 5 13 5 15a7 7 0 0 0 7 7z"/>',
  'pararrayos': '<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/><path d="M11.5 8l-2 4h5l-2 4"/>',
  'soldadura-exotermica': '<path d="M8.5 14.5A2.5 2.5 0 0 0 11 12c0-1.38-.5-2-1-3-1.5-2-2-3.5-2-5.5 4 0 6 2 7 4.5S16 12 16 14c0 3.31-2.69 6-6 6s-6-2.69-6-6c0-1.66.68-3.44 1.5-4.5"/>',
  'accesorios': '<path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>',
  'servicios': '<rect width="8" height="4" x="8" y="2" rx="1" ry="1"/><path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/><path d="m9 14 2 2 4-4"/>',
};
const iconSvg = CATEGORY_ICONS[id] || CATEGORY_ICONS['electrodos-electromagneticos'];
---

<a href={`/productos?categoria=${id}`} class="category-card" data-aos="fade-up" data-aos-delay={delay ? String(delay) : undefined}>
  <div class="category-icon">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"
         stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"
         set:html={iconSvg} />
  </div>
  <h3 class="category-title">{name}</h3>
  <p class="category-description">{description}</p>
  <span class="category-count">{count} {count === 1 ? 'producto' : 'productos'}</span>
</a>

<style>
  .category-card {
    position: relative;
    display: block;
    padding: var(--spacing-8);
    background: var(--color-white);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-xl);
    text-align: center;
    transition: transform var(--transition-base), box-shadow var(--transition-base), border-color var(--transition-base);
    overflow: hidden;
  }

  .category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--color-primary) 0%, var(--color-accent) 100%);
    transform: scaleX(0);
    transition: transform var(--transition-base);
  }

  .category-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-card-hover);
    border-color: transparent;
  }

  .category-card:hover::before {
    transform: scaleX(1);
  }

  .category-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto var(--spacing-4);
    background: linear-gradient(135deg, var(--color-primary-50) 0%, var(--color-primary-light) 100%);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform var(--transition-base), background var(--transition-base);
  }

  .category-card:hover .category-icon {
    transform: scale(1.1) rotate(5deg);
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
  }

  .category-icon svg {
    width: 40px;
    height: 40px;
    color: var(--color-primary);
    transition: color var(--transition-base);
  }

  .category-card:hover .category-icon svg {
    color: var(--color-white);
  }

  .category-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-gray-900);
    margin-bottom: var(--spacing-2);
  }

  .category-description {
    font-size: var(--font-size-sm);
    color: var(--color-gray-500);
    margin-bottom: var(--spacing-2);
    line-height: 1.5;
  }

  .category-count {
    font-size: var(--font-size-sm);
    color: var(--color-gray-500);
    font-weight: var(--font-weight-medium);
  }

  /* Dark mode â€” hardcoded hex values for reliability */
  :global([data-theme="dark"]) .category-card {
    background: #1e293b;
    border-color: #334155;
  }

  :global([data-theme="dark"]) .category-title {
    color: #ffffff;
  }

  :global([data-theme="dark"]) .category-description,
  :global([data-theme="dark"]) .category-count {
    color: #94a3b8;
  }

  :global([data-theme="dark"]) .category-icon {
    background: linear-gradient(135deg, rgba(76, 154, 255, 0.15) 0%, rgba(76, 154, 255, 0.3) 100%);
  }

  :global([data-theme="dark"]) .category-icon svg {
    color: #60a5fa;
  }

  :global([data-theme="dark"]) .category-card:hover .category-icon svg {
    color: #ffffff;
  }
</style>
