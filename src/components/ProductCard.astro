---
import AddToQuoteBtn from './islands/AddToQuoteBtn.tsx';
import { slugify } from '../utils/slugify';
import { applicationTags } from '../data/application-tags';
import { getCategoryPlaceholderSvg } from '../utils/category-placeholders';

interface Props {
  sku: string;
  title: string;
  category: string;
  categorySlug: string;
  description: string;
  image: string | null;
  badge: string | null;
  inStock: boolean;
  delay?: number;
  hasVariants?: boolean;
}

const { sku, title, category, categorySlug, description, image, badge, inStock, delay, hasVariants } = Astro.props;
const productUrl = `/productos/${slugify(title)}`;
const tags = applicationTags[categorySlug] || [];
---

<article class="product-card" data-aos="fade-up" data-aos-delay={delay ? String(delay) : undefined}>
  <a href={productUrl} class="product-link">
    <div class="product-image">
      {badge && <span class="product-badge">{badge}</span>}
      {image ? (
        <img src={image} alt={title} loading="lazy" decoding="async" width="300" height="200" sizes="(max-width: 480px) calc(100vw - 32px), (max-width: 768px) calc(50vw - 24px), (max-width: 1024px) calc(33.33vw - 24px), 280px" />
      ) : (
        <Fragment set:html={getCategoryPlaceholderSvg(categorySlug)} />
      )}
    </div>
    <div class="product-content">
      <div class="product-meta-row">
        <span class="product-category">{category}</span>
        {hasVariants && (
          <span class="variant-indicator">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="11" height="11" aria-hidden="true">
              <rect x="3" y="3" width="7" height="7" rx="1"/>
              <rect x="14" y="3" width="7" height="7" rx="1"/>
              <rect x="3" y="14" width="7" height="7" rx="1"/>
              <rect x="14" y="14" width="7" height="7" rx="1"/>
            </svg>
            Variantes
          </span>
        )}
      </div>
      {tags.length > 0 && (
        <div class="application-tags">
          {tags.map((tag) => (
            <span class="app-tag">{tag}</span>
          ))}
        </div>
      )}
      <h3 class="product-title">{title}</h3>
      <p class="product-description">{description}</p>
      <div class="product-sku-row">
        <span class="product-sku">SKU: {sku}</span>
        <span class:list={['card-stock', { 'out-stock': !inStock }]}>
          <span class="stock-dot"></span>
          {inStock ? 'En Stock' : 'Sin Stock'}
        </span>
      </div>
    </div>
  </a>
  <div class="product-footer">
    <AddToQuoteBtn client:visible sku={sku} title={title} category={category} image={image} inStock={inStock} />
  </div>
</article>

<style>
  .product-card {
    position: relative;
    background: var(--color-surface-card);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
    box-shadow: var(--shadow-card);
    contain: layout style paint;
  }

  .product-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-card-hover);
  }

  .product-link {
    display: block;
    color: inherit;
  }

  .product-image {
    position: relative;
    height: 200px;
    aspect-ratio: 3/2;
    background: linear-gradient(90deg, var(--color-gray-100) 25%, var(--color-gray-50) 50%, var(--color-gray-100) 75%);
    background-size: 200% 100%;
    animation: skeleton-loading 1.5s ease-in-out infinite;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-image :global(svg) {
    width: 120px;
    height: 120px;
    color: var(--color-gray-400);
  }

  .product-badge {
    position: absolute;
    top: var(--spacing-3);
    left: var(--spacing-3);
    padding: var(--spacing-1) var(--spacing-3);
    background: var(--color-primary);
    color: var(--color-text-on-primary);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-semibold);
    border-radius: var(--radius-full);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    z-index: 2;
  }

  .product-content {
    padding: var(--spacing-5);
  }

  /* Meta row: category + variant indicator */
  .product-meta-row {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    margin-bottom: var(--spacing-2);
    flex-wrap: wrap;
  }

  .product-category {
    display: inline-block;
    padding: var(--spacing-1) var(--spacing-2);
    background: var(--color-primary-50);
    color: var(--color-primary);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    border-radius: var(--radius-sm);
  }

  .variant-indicator {
    display: inline-flex;
    align-items: center;
    gap: 3px;
    padding: var(--spacing-1) var(--spacing-2);
    background: var(--color-accent, #FF6B00);
    color: #fff;
    font-size: 11px;
    font-weight: var(--font-weight-semibold);
    border-radius: var(--radius-sm);
  }

  /* Application tags */
  .application-tags {
    display: flex;
    gap: var(--spacing-1);
    margin-bottom: var(--spacing-2);
    flex-wrap: wrap;
  }

  .app-tag {
    display: inline-block;
    padding: 1px 6px;
    background: var(--color-gray-100);
    color: var(--color-gray-600);
    font-size: 10px;
    font-weight: var(--font-weight-medium);
    border-radius: var(--radius-full);
    text-transform: uppercase;
    letter-spacing: 0.3px;
  }

  .product-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-gray-900);
    margin-bottom: var(--spacing-2);
    line-height: 1.3;
  }

  .product-description {
    font-size: var(--font-size-sm);
    color: var(--color-gray-500);
    margin-bottom: var(--spacing-3);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* SKU + Stock row */
  .product-sku-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--spacing-4);
  }

  .product-sku {
    font-size: var(--font-size-xs);
    color: var(--color-gray-400);
  }

  .card-stock {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    font-size: 11px;
    font-weight: var(--font-weight-medium);
    color: var(--color-success, #36B37E);
  }

  .card-stock.out-stock {
    color: var(--color-gray-400);
  }

  .stock-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: currentColor;
    animation: pulse 2s ease-in-out infinite;
  }

  .card-stock.out-stock .stock-dot {
    animation: none;
  }

  .product-footer {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 0 var(--spacing-5) var(--spacing-5);
    padding-top: var(--spacing-4);
    border-top: 1px solid var(--color-gray-100);
    margin: 0 var(--spacing-5);
    padding-left: 0;
    padding-right: 0;
    margin-bottom: var(--spacing-5);
  }

  .btn-add-quote {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-2) var(--spacing-4);
    background: var(--color-accent);
    color: var(--color-white);
    border-radius: var(--radius-md);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    border: none;
    cursor: pointer;
    transition: background var(--transition-base), transform var(--transition-base);
  }

  .btn-add-quote:hover {
    background: var(--color-accent-dark);
    transform: scale(1.05);
  }

  .btn-add-quote svg {
    width: 18px;
    height: 18px;
  }

  /* Dark mode */
  :global([data-theme="dark"]) .product-card:hover {
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.4);
  }

  :global([data-theme="dark"]) .product-image {
    background: linear-gradient(90deg, #334155 25%, #1e293b 50%, #334155 75%);
    background-size: 200% 100%;
  }

  :global([data-theme="dark"]) .product-category {
    background: rgba(76, 154, 255, 0.15);
    color: #60a5fa;
  }

  :global([data-theme="dark"]) .product-title {
    color: #ffffff;
  }

  :global([data-theme="dark"]) .product-description {
    color: #94a3b8;
  }

  :global([data-theme="dark"]) .product-footer {
    border-top-color: #334155;
  }

  :global([data-theme="dark"]) .btn-add-quote {
    color: #ffffff;
  }

  :global([data-theme="dark"]) .product-image :global(svg rect) {
    fill: #334155;
    stroke: #475569;
  }

  :global([data-theme="dark"]) .product-image :global(svg circle) {
    fill: #1e293b;
    stroke: #64748b;
  }

  :global([data-theme="dark"]) .product-image :global(svg path) {
    stroke: #64748b;
  }

  :global([data-theme="dark"]) .product-sku {
    color: #64748b;
  }

  :global([data-theme="dark"]) .app-tag {
    background: rgba(76, 154, 255, 0.1);
    color: #94a3b8;
  }

  :global([data-theme="dark"]) .variant-indicator {
    background: #c45000;
  }

  :global([data-theme="dark"]) .card-stock {
    color: #4ade80;
  }

  :global([data-theme="dark"]) .card-stock.out-stock {
    color: #64748b;
  }
</style>
